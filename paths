PATHS="/usr/local/bin            \
       /usr/local/sbin           \
       /Library/Haskell/bin      \
       $HOME/Library/Haskell/bin \
       $HOME/.bin                \
       $HOME/.go/bin             \
       $HOME/.cabal/bin          \
       $HOME/.gem/ruby/2.5.0/bin \
       $HOME/.local/bin          \
       $HOME/.npm-packages/bin   \
       $HOME/.ghcup/bin          "

for x in $PATHS; do
  case ":$PATH:" in
    *":$x:"*) :;; # already there
    *) export PATH="$x:$PATH";;
  esac
done
